                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_legacies" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Legacies &amp; Bequests" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_pre_loved" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Pre-Loved Donations" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_tax_certificate" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Tax Certificate" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Us -->
            <TextView android:text="About Us" android:textStyle="bold" android:textColor="@color/muted_foreground" android:layout_marginTop="8dp" android:layout_marginBottom="4dp" />
            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <LinearLayout android:id="@+id/menu_item_news" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
