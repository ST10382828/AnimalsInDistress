<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:text="1000 Heroes" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:text="Join our 1000 Heroes initiative and become a monthly supporter" android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Sections -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:text="What is 1000 Heroes?" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:text="1000 Heroes is our monthly giving program where supporters commit to a regular monthly donation. These consistent contributions help us plan better and provide ongoing care for animals in need." android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:text="Your Impact" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:text="• Regular veterinary care
• Mobile clinic operations
• Emergency treatments
• Community education programs" android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:text="Join Today" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:text="Sign up for a monthly donation of any amount and become one of our 1000 Heroes. Every contribution makes a difference." android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer removed: not in Compose -->

</LinearLayout>


