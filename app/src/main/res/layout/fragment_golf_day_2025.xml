<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:text="Golf Day 2025" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:text="Join us for our annual fundraising golf day" android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Event Details -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="ðŸ“…" />
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <TextView android:text="Event Details" android:textStyle="bold" android:textSize="20sp" />
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:text="Our annual Golf Day is a premier fundraising event that brings together golf enthusiasts and animal lovers. All proceeds go towards animal welfare and community outreach programs." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:text="Stay tuned for 2025 event details!" android:textStyle="bold" android:textColor="@color/primary" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_register_interest" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Register Interest" app:backgroundTint="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_footer" />

</LinearLayout>


