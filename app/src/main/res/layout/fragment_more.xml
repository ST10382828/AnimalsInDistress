                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_call" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Call Us — 011 466 0261" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Email Us — animals@animalsindistress.org.za" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Follow Us -->
            <TextView android:text="Follow Us" android:textStyle="bold" android:textColor="@color/muted_foreground" android:layout_marginTop="8dp" android:layout_marginBottom="4dp" />
            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <LinearLayout android:id="@+id/menu_item_facebook" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
