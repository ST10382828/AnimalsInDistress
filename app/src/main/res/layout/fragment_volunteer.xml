<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Volunteer With Us" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Join our volunteer team and help make a difference in the lives of animals in need" android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Why Volunteer? -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Why Volunteer?" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="We are always in need of dedicated volunteers to help us with various tasks. Whether it's walking dogs, socialising cats, helping at events, or assisting with administrative work, your time and effort are deeply appreciated and make a real difference." android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Volunteer Opportunities -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Volunteer Opportunities" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    
                    <!-- Animal Care -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="top">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check_circle_24" app:tint="#10B981" android:layout_marginTop="2dp" android:contentDescription="Check" />
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Animal Care" android:textStyle="bold" android:textSize="14sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Help feed, walk, and socialize our animals" android:textColor="@color/muted_foreground" android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    
                    <!-- Event Support -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="top">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check_circle_24" app:tint="#10B981" android:layout_marginTop="2dp" android:contentDescription="Check" />
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Event Support" android:textStyle="bold" android:textSize="14sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Assist with fundraising events and awareness campaigns" android:textColor="@color/muted_foreground" android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    
                    <!-- Administrative -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="top">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check_circle_24" app:tint="#10B981" android:layout_marginTop="2dp" android:contentDescription="Check" />
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Administrative" android:textStyle="bold" android:textSize="14sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Help with paperwork, data entry, and office tasks" android:textColor="@color/muted_foreground" android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    
                    <!-- Transportation -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="top">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check_circle_24" app:tint="#10B981" android:layout_marginTop="2dp" android:contentDescription="Check" />
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Transportation" android:textStyle="bold" android:textSize="14sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Help transport animals to and from appointments" android:textColor="@color/muted_foreground" android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Get Started -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Get Started" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="To become a volunteer, please contact us via phone or email. We'll provide you with more information about available opportunities and the next steps." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.button.MaterialButton 
                        android:id="@+id/btn_contact_volunteer" 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:text="Contact Us"
                        app:icon="@drawable/ic_email_24"
                        app:iconGravity="start"
                        app:backgroundTint="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


