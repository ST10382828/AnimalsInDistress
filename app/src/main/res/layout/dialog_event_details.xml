<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annual Golf Day Tournament"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D3748" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Category Badge -->
        <TextView
            android:id="@+id/tvCategoryBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golf Day"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#10B981"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="#D1FAE5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join us for our annual golf day tournament supporting Animals in Distress."
            android:textSize="14sp"
            android:textColor="#2D3748" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginVertical="16dp" />

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#003D99" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvDialogDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday, December 14, 2024"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748" />

                <TextView
                    android:id="@+id/tvDialogTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM - 4:00 PM"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="#003D99" />

            <TextView
                android:id="@+id/tvDialogLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pebble Beach Golf Club"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- RSVP Status -->
        <LinearLayout
            android:id="@+id/containerRSVP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginVertical="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RSVP Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748" />

                <TextView
                    android:id="@+id/tvDialogRSVPCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 / 100 attending"
                    android:textSize="14sp"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <!-- Full Event Warning -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFullWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#FFF7ED"
                app:cardCornerRadius="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        app:tint="#F59E0B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event is full"
                        android:textSize="14sp"
                        android:textColor="#F59E0B"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginVertical="16dp" />

        <!-- Reminder Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivReminderIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="#003D99" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvReminderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Reminder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748" />

                <TextView
                    android:id="@+id/tvReminderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get notified before the event"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginVertical="16dp" />

    </LinearLayout>

</ScrollView>

