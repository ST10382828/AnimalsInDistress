<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1A10B981">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:id="@+id/text_goal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help us reach 100 surgeries this quarter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:id="@+id/text_goal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every surgery saves a life. Help us provide life-saving medical care."
            android:textSize="13sp"
            android:textColor="@color/muted_foreground"
            android:layout_marginBottom="12dp" />
        
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="65"
            app:indicatorColor="#10B981"
            app:trackColor="#1A10B981"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/text_goal_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R325,000 of R500,000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/foreground" />
            
            <TextView
                android:id="@+id/text_goal_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R175,000 remaining"
                android:textSize="12sp"
                android:textColor="@color/muted_foreground" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
