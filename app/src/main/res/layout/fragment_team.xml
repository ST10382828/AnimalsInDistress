<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Meet The Team" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Meet the wonderful team behind the SAID scenes that help keep the wheels turning." android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Meg Harvey Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <com.google.android.material.card.MaterialCardView android:layout_width="64dp" android:layout_height="64dp" android:radius="32dp" app:cardCornerRadius="32dp">
                            <ImageView android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/meg_harvey" android:scaleType="centerCrop" android:contentDescription="Meg Harvey" />
                        </com.google.android.material.card.MaterialCardView>
                        <Space android:layout_width="16dp" android:layout_height="0dp" />
                        <LinearLayout 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Meg Harvey" android:textStyle="bold" android:textSize="24sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CEO/Board Member" android:textStyle="bold" android:textColor="@color/primary" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Meg has been involved in animal welfare for over a decade – with an undeniable passion and affinity to animals, she has dedicated the majority of her adult life to serving and protecting animals." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Her career started at the NSPCA in an administration role where she soon qualified as an inspector and worked through the ranks of the organization – she then went on to manage a local SPCA." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A3B82F6">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Areas of Interest" android:textStyle="bold" android:textColor="#1E40AF" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="She has a keen interest in law, human psychology, and the link between crimes against animals and crimes against humans, as well as the positive mental health impact that animals have in people." android:textColor="#1E3A8A" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A10B981">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Personal Life" android:textStyle="bold" android:textColor="#047857" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Meg is married and has a daughter (8) and son (2) who are both animal crazy, and a rescue cat and dog. In 2017, she summited Mt. Kilimanjaro while on a quest to raise funds and awareness for animal welfare in South Africa and enjoys mountaineering and the outdoors." android:textColor="#065F46" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A8B5CF6">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Philosophy" android:textStyle="bold" android:textColor="#6D28D9" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="She believes that the change that our country and world desperately needs starts with engendering compassion to all animals in the youth – that if young people were taught to respect every creature – they would in turn respect humans too." android:textColor="#5B21B6" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="She feels incredibly privileged to be part of the Society for Animals in Distress as it is an organization that strives for the change that our country needs." android:textColor="@color/muted_foreground" android:textStyle="italic" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Dr Isabel Meyer Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <com.google.android.material.card.MaterialCardView android:layout_width="64dp" android:layout_height="64dp" android:radius="32dp" app:cardCornerRadius="32dp">
                            <ImageView android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/dr_isabel" android:scaleType="centerCrop" android:contentDescription="Dr Isabel Meyer" />
                        </com.google.android.material.card.MaterialCardView>
                        <Space android:layout_width="16dp" android:layout_height="0dp" />
                        <LinearLayout 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dr Isabel Meyer" android:textStyle="bold" android:textSize="24sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Board Member" android:textStyle="bold" android:textColor="@color/secondary" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Isabel joined the society as board member in 2021." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Isabel is a systems researcher and veterinarian, with a passion for finding ways to ensure that development efforts deliver impact and sustain their benefits. Her research includes community development projects, and sustainable welfare management strategies for animals at industrial sites." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A3B82F6">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Research Focus" android:textStyle="bold" android:textColor="#1E40AF" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="She collaborates with universities to create opportunities for student research on animal health and welfare systems. Isabel considers access to veterinary services as critical to animal welfare and is keen to contribute to the Society's vision of access to care for animals in resource-constrained environments." android:textColor="#1E3A8A" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Andrew Fairlie Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <com.google.android.material.card.MaterialCardView android:layout_width="64dp" android:layout_height="64dp" android:radius="32dp" app:cardCornerRadius="32dp">
                            <ImageView android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/andrew" android:scaleType="centerCrop" android:contentDescription="Andrew Fairlie" />
                        </com.google.android.material.card.MaterialCardView>
                        <Space android:layout_width="16dp" android:layout_height="0dp" />
                        <LinearLayout 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Andrew Fairlie" android:textStyle="bold" android:textSize="24sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Board Member" android:textStyle="bold" android:textColor="#F59E0B" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Andrew joined the Society as Treasurer in mid-2019. Andrew is an Associate Member of CIMA and Professional Accountant (SA) with extensive experience in corporate finance management and strategy." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    
                    <!-- Professional Expertise -->
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A10B981" app:cardCornerRadius="8dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Professional Expertise" android:textStyle="bold" android:textColor="#047857" android:textSize="14sp" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="These experiences contribute to strategy, financial management and internal control oversight which ensure accuracy and transparency in financial reporting." android:textColor="#065F46" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    
                    <!-- Personal Mission -->
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A8B5CF6" app:cardCornerRadius="8dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Personal Mission" android:textStyle="bold" android:textColor="#6D28D9" android:textSize="14sp" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Andrew is a family man and animal lover, dedicated to the upliftment of animals and people in impoverished communities and honoured to work alongside the heroes at the Society." android:textColor="#5B21B6" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Dr Chantelle Murray Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <com.google.android.material.card.MaterialCardView android:layout_width="64dp" android:layout_height="64dp" android:radius="32dp" app:cardCornerRadius="32dp">
                            <ImageView android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/chantelle" android:scaleType="centerCrop" android:contentDescription="Dr Chantelle Murray" />
                        </com.google.android.material.card.MaterialCardView>
                        <Space android:layout_width="16dp" android:layout_height="0dp" />
                        <LinearLayout 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dr Chantelle Murray" android:textStyle="bold" android:textSize="24sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Board Member" android:textStyle="bold" android:textColor="#E1306C" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chantelle Murray has spent 26 years in the Human Resource Development and Organisational Development sector. She gravitated in this career direction because of her firm belief in the potential of human-beings. Her career has spanned time spent in both the public and private sector, along with private consulting." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chantelle is currently the Head of the Human Resource Development Unit (HRDU) at the University of the Witwatersrand." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A3B82F6">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="PAWS R US (SA)" android:textStyle="bold" android:textColor="#1E40AF" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chantelle is the Founder / Director of PAWS R US (SA), a small, private shelter for dogs, established in 2011 and based in Midrand, Johannesburg. This journey has afforded Chantelle the opportunity to gain insight into the companion animal welfare sector in South Africa – both from the hands-on perspective of running a shelter, and from the perspectives gained through the completion of her PhD study which focused on governance and donor funding in the non-profit sector." android:textColor="#1E3A8A" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A10B981">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ONE Revolution Foundation" android:textStyle="bold" android:textColor="#047857" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Stemming from this research, she has established ONE Revolution Foundation (ONE-R) and has co-created the ONE-R digital platform – this ground-breaking work focuses on uplifting the NPO sector in SA." android:textColor="#065F46" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A8B5CF6">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Education &amp; Personal" android:textStyle="bold" android:textColor="#6D28D9" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chantelle holds a PhD from the University of Johannesburg, and a Master's degree in Leadership, Performance and Change, and is the proud mom of a herd of furry friends." android:textColor="#5B21B6" android:textSize="13sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Vacancy Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" app:strokeWidth="2dp" app:strokeColor="#4D003D99">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <com.google.android.material.card.MaterialCardView android:layout_width="64dp" android:layout_height="64dp" app:cardBackgroundColor="#1A003D99" android:radius="32dp" />
                        <Space android:layout_width="16dp" android:layout_height="0dp" />
                        <LinearLayout 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Vacancy" android:textStyle="bold" android:textSize="24sp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Board Member Position Available" android:textStyle="bold" android:textColor="@color/primary" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="We are seeking passionate individuals to join our Board of Directors and help drive our mission forward! If you have the skills, experience, and dedication to make a meaningful impact, we'd love to hear from you." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A003D99">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="How to Apply" android:textStyle="bold" android:textColor="@color/primary" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="To apply, please send your CV and a one-page motivation outlining how you can add value to SAID to:" android:textColor="@color/primary" android:textSize="13sp" />
                            <Space android:layout_width="0dp" android:layout_height="8dp" />
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="meg@animalsindistress.org.za" android:textStyle="bold" android:textColor="@color/primary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A10B981">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:gravity="center">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Join us in creating a brighter future for animals and communities!" android:textStyle="bold" android:textColor="#E610B981" android:gravity="center" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>


