    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Header -->
            <TextView android:text="More Options" android:textStyle="bold" android:textSize="24sp" android:textColor="@color/foreground" android:layout_marginBottom="8dp" />

            <!-- Support Us -->
            <TextView android:text="Support Us" android:textStyle="bold" android:textColor="@color/muted_foreground" android:layout_marginTop="8dp" android:layout_marginBottom="4dp" />
            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <LinearLayout android:id="@+id/menu_item_volunteer" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Volunteer" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_shop" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Shop" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_dancing_donkey" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="The Dancing Donkey" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_heart_sole_store" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:text="Heart &amp; Sole Store" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
                        <TextView android:text=">" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/border" />
                    <LinearLayout android:id="@+id/menu_item_golf_day" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
