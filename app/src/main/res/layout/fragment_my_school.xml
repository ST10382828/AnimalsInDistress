<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">

            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <ImageView android:layout_width="200dp" android:layout_height="wrap_content" android:src="@drawable/logo_myschool" android:scaleType="fitCenter" android:contentDescription="MySchool MyVillage MyPlanet Logo" android:adjustViewBounds="true" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="MySchool MyVillage MyPlanet" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" android:gravity="center" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="One of South Africa's biggest fundraising programmes" android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- How It Works -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="How It Works" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="MySchool MyVillage MyPlanet is one of South Africa's biggest fundraising programmes and allows you to make a difference, just by shopping." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Every time you use your card at any of their partner stores they'll give back a percentage of your purchase value, on your behalf, to the charity you choose at absolutely no cost to you! Get your free card today. Every swipe counts." android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Support Us By Getting Your Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Support Us By Getting Your Card" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    
                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_complete_online" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Complete The Online Application Form" app:backgroundTint="@color/primary" android:layout_marginBottom="12dp" />
                    
                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_download_form" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Download The Application Form" style="@style/Widget.Material3.Button.OutlinedButton" android:textColor="@color/primary" app:strokeColor="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Activate Your Card -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content" >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Activate your Card with the QR Code" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1. Open the camera on your phone." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="8dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2. Hold the camera over the QR code. A link will automatically pop up." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="8dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="3. Enter the last 8 digits of the card and complete the signup process to activate the card." android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
                        <ImageView android:layout_width="200dp" android:layout_height="200dp" android:src="@drawable/myschool_qrcode_1" android:scaleType="fitCenter" android:contentDescription="MySchool QR Code" android:adjustViewBounds="true" />
                    </LinearLayout>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A10B981">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="⚠️ Please ensure you choose &quot;The Society for Animals in Distress&quot; as your beneficiary." android:textColor="#E610B981" android:textSize="13sp" android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Swipe your card whenever you make a purchase at any partner store. The partner will donate a percentage of your purchases to us!" android:textColor="@color/muted_foreground" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer removed: not in Compose -->

</LinearLayout>


