<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_mobile_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">
            <!-- Hero -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="The Dancing Donkey" android:textStyle="bold" android:textSize="32sp" android:textColor="@color/foreground" />
                <Space android:layout_width="0dp" android:layout_height="12dp" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Our farm party venue is all about fun, laughter, and a little animal magic!" android:textColor="@color/muted_foreground" android:gravity="center" />
            </LinearLayout>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Introduction -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="With wide open spaces, friendly farmyard friends, and plenty of room to play, we'll make your celebration a day your kids will never forget." android:textColor="@color/muted_foreground" android:textSize="16sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="And for the grown-ups — enjoy rustic charm, beautiful views, and the perfect setting for relaxed gatherings, birthdays, or even sip-and-paint afternoons" android:textColor="@color/muted_foreground" android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- What's Included -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="What's Included" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="For just R5000, your party package includes:" android:textColor="@color/muted_foreground" android:textSize="16sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Venue hire (3 hours)" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• A stick waffle, hotdog, and slush puppy for each child" android:layout_marginTop="8dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Access to a jumping castle, jungle gym, and our friendly farm animals" android:layout_marginTop="8dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Maximum of 15 kids per party" android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Party Times -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Party Times" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Parties can be booked on Saturdays and Sundays:" android:textColor="@color/muted_foreground" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="2">
                        <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:cardBackgroundColor="#1A3B82F6">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_horizontal">
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Morning Slot" android:textStyle="bold" android:textColor="#1E40AF" />
                                <Space android:layout_width="0dp" android:layout_height="8dp" />
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="10:00 AM – 1:00 PM" android:textColor="#1E3A8A" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <Space android:layout_width="12dp" android:layout_height="0dp" />
                        <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:cardBackgroundColor="#1A10B981">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_horizontal">
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Afternoon Slot" android:textStyle="bold" android:textColor="#047857" />
                                <Space android:layout_width="0dp" android:layout_height="8dp" />
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2:00 PM – 5:00 PM" android:textColor="#065F46" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Extras for Guests -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Extras for Guests" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Tuck Shop with sweet treats for sale" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Freshly brewed coffee available for purchase for parents and adults" android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Booking Information -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Booking Information" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1AF59E0B">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Booking is essential" android:textStyle="bold" android:textColor="#E6F59E0B" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• A 50% deposit secures your spot" android:textColor="@color/muted_foreground" />
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="• Balance due before the party date" android:textColor="@color/muted_foreground" android:layout_marginTop="6dp" />
                    <Space android:layout_width="0dp" android:layout_height="12dp" />
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#1A003D99">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">
                            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Contact our Party Flock for a bespoke package." android:textStyle="bold" android:textColor="@color/primary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="0dp" android:layout_height="16dp" />

            <!-- Contact Form -->
            <com.google.android.material.card.MaterialCardView style="@style/Widget.Material3.CardView.Elevated" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Get in touch with our Party Flock to make your party unforgettable!" android:textStyle="bold" android:textSize="20sp" />
                    <Space android:layout_width="0dp" android:layout_height="16dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Name" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Email *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:hint="Email" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Phone Number *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_phone" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone" android:hint="Phone Number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Date of Event *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Date of Event" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Type of Event *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_event_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Kids Party" android:focusable="false" android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Message *" />
                    <Space android:layout_width="0dp" android:layout_height="4dp" />
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText android:id="@+id/et_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:minLines="4" android:hint="Message" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="16dp" />

                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_submit_party" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Submit" app:backgroundTint="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


